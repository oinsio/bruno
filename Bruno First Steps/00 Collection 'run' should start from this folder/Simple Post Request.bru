meta {
  name: Simple Post Request
  type: http
  seq: 2
}

post {
  url: {{protocol}}://{{baseUrl}}/api/v1/greet
  body: json
  auth: none
}

body:json {
  {
    "name": "{{name}}"
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.message: contains {{name}}
  res.headers['x-request-id']: eq {{uuid}}
}
